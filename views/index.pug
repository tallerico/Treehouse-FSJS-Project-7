              h1 #{user.screen_name}
          .circle--fluid--cell.align-right
            nav
              ul.circle--inline
                li
                  a Sign Out
    .app--tweet
      form
        .circle--fluid
          .circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
            .app--avatar(style="background-image: url(images/m-spore.png)")
              img(src="images/m-spore.png")
            textarea#tweet-textarea.circle--textarea--input(placeholder="What's happening?" name= "status")
            strong#tweet-char.app--tweet--char 140
          .circle--fluid--cell.align-bottom
            button(class="button-primary" id="submit") Tweet
    .bounds.app--body
      .app--section--header
        .grid-33
          .app--section--heading
            h2 Timeline
        .grid-33
          .app--section--heading
            strong 129
            h2 Following
        .grid-33
          .app--section--heading
            h2 Direct Messages
      .grid-33
        .app--section
          ul.app--tweet--list
            include tweets
      .grid-33
        .app--section
          ul.app--user--list
            include followers
      .grid-33
        .app--section
          ul.app--message--list
            li
              h3
                | Conversation with 
                a #{tweets[0].name}
              ul.app--message--conversation
                include direct
